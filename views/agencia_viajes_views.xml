<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_agencia_viajes_list" model="ir.ui.view">
        <field name="name">agencia.viajes.list</field>
        <field name="model">agencia.viajes</field>
        <field name="arch" type="xml">
            <list string="Viajes"> 
                <field name="name"/>
                <field name="fec_comienzo"/>
                <field name="duracion"/>
                <field name="situacion" widget="badge" decoration-info="situacion == 'A'" decoration-warning="situacion == 'R'" decoration-success="situacion == 'T'"/>
            </list>
        </field>
    </record>

    <record id="view_agencia_viajes_form" model="ir.ui.view">
        <field name="name">agencia.viajes.form</field>
        <field name="model">agencia.viajes</field>
        <field name="arch" type="xml">
            <form string="Viaje">
                <header>
                    <field name="situacion" widget="statusbar" statusbar_visible="A,R,T" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder ="Ej. Crucero por el MediterrÃ¡neo"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="fec_comienzo"/>
                            <field name="duracion"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Escala (Destinos)" name="escala">
                            <field name="escala"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_agencia_viajes" model="ir.actions.act_window">
        <field name="name">Viajes</field>
        <field name="res_model">agencia.viajes</field>
        <field name="view_mode">list,form</field> 
    </record>

</odoo>