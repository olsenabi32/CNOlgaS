<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cnvuestronombrep_destinos_list" model="ir.ui.view">
        <field name="name">cnvuestronombrep.destino.list</field>
        <field name="model">cnvuestronombrep.destino</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="codigo_postal"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_cnvuestronombrep_destinos_form" model="ir.ui.view">
        <field name="name">cnvuestronombrep.destino.form</field>
        <field name="model">cnvuestronombrep.destino</field>
        <field name="arch" type="xml">
            <form string="Destino">
                <sheet>
                    <group>
                        <field name="name" placeholder="Ej. AlmerÃ­a"/>
                        <field name="codigo_postal" placeholder="Ej. 04001"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="viaje_ids" widget="many2many_tags" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cnvuestronombrep_destinos" model="ir.actions.act_window">
        <field name="name">Destinos</field>
        <field name="res_model">cnvuestronombrep.destino</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea el primer destino
            </p>
        </field>
    </record>
</odoo>
