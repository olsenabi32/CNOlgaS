<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cnvuestronombrep_viajes_list" model="ir.ui.view">
        <field name="name">cnvuestronombrep.viaje.list</field>
        <field name="model">cnvuestronombrep.viaje</field>
        <field name="arch" type="xml">
            <list string="Viajes">
                <field name="name"/>
                <field name="fecha_inicio"/>
                <field name="duracion"/>
                <field name="situacion" widget="badge"
                       decoration-info="situacion == 'abierto'"
                       decoration-warning="situacion == 'realizado'"
                       decoration-success="situacion == 'terminado'"/>
            </list>
        </field>
    </record>

    <record id="view_cnvuestronombrep_viajes_form" model="ir.ui.view">
        <field name="name">cnvuestronombrep.viaje.form</field>
        <field name="model">cnvuestronombrep.viaje</field>
        <field name="arch" type="xml">
            <form string="Viaje">
                <header>
                    <field name="situacion" widget="statusbar" statusbar_visible="abierto,realizado,terminado" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Ej. Crucero por el MediterrÃ¡neo"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="fecha_inicio"/>
                            <field name="duracion"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Escalas (Destinos)" name="escalas">
                            <field name="destino_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cnvuestronombrep_viajes" model="ir.actions.act_window">
        <field name="name">Viajes</field>
        <field name="res_model">cnvuestronombrep.viaje</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
