<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cesta_navidad_cesta_list" model="ir.ui.view">
        <field name="name">cestanavidadolga.cesta.list</field>
        <field name="model">cestanavidadolga.cesta</field>
        <field name="arch" type="xml">
            <list string="Cestas">
                <field name="name"/>
                <field name="cliente"/>
                <field name="fecha_entrega"/>
                <field name="total"/>
                <field name="estado" widget="badge"
                       decoration-info="estado == 'borrador'"
                       decoration-warning="estado == 'preparacion'"
                       decoration-primary="estado == 'enviada'"
                       decoration-success="estado == 'entregada'"/>
            </list>
        </field>
    </record>

    <record id="view_cesta_navidad_cesta_form" model="ir.ui.view">
        <field name="name">cestanavidadolga.cesta.form</field>
        <field name="model">cestanavidadolga.cesta</field>
        <field name="arch" type="xml">
            <form string="Cesta de Navidad">
                <header>
                    <field name="estado" widget="statusbar" statusbar_visible="borrador,preparacion,enviada,entregada" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="cliente"/>
                        <field name="fecha_entrega"/>
                        <field name="total" readonly="1"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Productos">
                            <field name="linea_ids">
                                <list editable="bottom">
                                    <field name="producto_id"/>
                                    <field name="cantidad"/>
                                    <field name="precio_unitario" readonly="1"/>
                                    <field name="subtotal" readonly="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cesta_navidad_cesta" model="ir.actions.act_window">
        <field name="name">Cestas</field>
        <field name="res_model">cestanavidadolga.cesta</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
