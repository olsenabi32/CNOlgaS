<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cesta_navidad_linea_list" model="ir.ui.view">
        <field name="name">cestanavidadolga.linea.list</field>
        <field name="model">cestanavidadolga.linea</field>
        <field name="arch" type="xml">
            <list string="Líneas de cesta">
                <field name="cesta_id"/>
                <field name="producto_id"/>
                <field name="cantidad"/>
                <field name="precio_unitario"/>
                <field name="subtotal"/>
            </list>
        </field>
    </record>

    <record id="view_cesta_navidad_linea_form" model="ir.ui.view">
        <field name="name">cestanavidadolga.linea.form</field>
        <field name="model">cestanavidadolga.linea</field>
        <field name="arch" type="xml">
            <form string="Línea de cesta">
                <sheet>
                    <group>
                        <field name="cesta_id"/>
                        <field name="producto_id"/>
                        <field name="cantidad"/>
                        <field name="precio_unitario" readonly="1"/>
                        <field name="subtotal" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cesta_navidad_linea" model="ir.actions.act_window">
        <field name="name">Líneas</field>
        <field name="res_model">cestanavidadolga.linea</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
